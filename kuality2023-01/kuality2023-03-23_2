#include <stdio.h>
#pragma warning(disable:4996)
#pragma warning(disable:6031)

int main() {

	int n1, n2, n3;
	char c;

	printf("정수 3개 입력 : ");
	scanf(" %d %d %d", &n1, &n2, &n3);
	printf("Input oprerator : ");
	scanf(" %c", &c);
	switch (c) {
	case '*':
		printf("%d * %d * %d = %d\n", n1, n2, n3, n1 * n2 * n3);
		break;

	case '+':
		printf("%d + %d + %d = %d\n", n1, n2, n3, n1 + n2 + n3);
		break;

	case '-':
		printf("%d - %d - %d = %d\n", n1, n2, n3, n1 - n2 - n3);
		break;

	case '/':
		printf("%d / %d / %d = %d\n", n1, n2, n3, n1 / n2 / n3);
		break;

	}
}
